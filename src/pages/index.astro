---
import Base from "../layouts/Base.astro";
import Hero from "../components/Hero.astro";
import Intro from "../components/Intro.astro";
import Testimonial from "../components/Testimonial.astro";
import Services from "../components/Services.astro";
import Contact from "../components/Contact.astro";
import WelcomeLoader from "../components/WelcomeLoader.astro";

const title = "Golden Pathway | UK Immigration Consultancy in London";
const description =
  "Golden Pathway provides expert UK immigration advice in London. Our multilingual consultants simplify visa applications for individuals and businesses.";
---

<Base title={title} description={description} image="/bg.png">
  <WelcomeLoader />
  <main>
    <Hero />
    <Intro />
    <Testimonial />
    <Services />
    <Contact />
  </main>
</Base>
